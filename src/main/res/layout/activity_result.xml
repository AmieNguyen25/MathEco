<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/SCREEN"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".Result">

    <LinearLayout
        android:layout_width="348dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:text="RESULT!!"
            android:fontFamily="@font/poppins_bold"
            style="@style/TEXTS"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textview_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="Excellent! It was great!"
            android:gravity="center_horizontal"
            android:fontFamily="@font/poppins_medium"
            style="@style/TEXTS"
            android:textSize="24sp" />
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#59FDBAEE"
        app:cardCornerRadius="15dp"
        app:cardPreventCornerOverlap="true">

        <TextView
            android:layout_width="92dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:background="@drawable/bluerec"
            android:gravity="center"
            android:text="1"
            android:fontFamily="@font/poppins_bold"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="Score"
                android:fontFamily="@font/poppins_bold"
                style="@style/TEXTS"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txtScoreResult"
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text=""
                android:fontFamily="@font/poppins_medium"
                style="@style/TEXTS"
                android:textSize="16sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#61665EC6"
        app:cardCornerRadius="15dp"
        app:cardPreventCornerOverlap="true">

        <TextView
            android:layout_width="92dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:background="@drawable/bluerec"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="2"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="Level"
                android:fontFamily="@font/poppins_bold"
                style="@style/TEXTS"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txtLevelResult"
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text=""
                android:fontFamily="@font/poppins_medium"
                style="@style/TEXTS"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#59FDBAEE"
        app:cardCornerRadius="15dp"
        app:cardPreventCornerOverlap="true">

        <TextView
            android:layout_width="92dp"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:background="@drawable/bluerec"
            android:gravity="center"
            android:text="3"
            android:fontFamily="@font/poppins_bold"
            android:textSize="24sp" />

        <LinearLayout
            android:layout_width="348dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text="Mode"
                android:fontFamily="@font/poppins_bold"
                style="@style/TEXTS"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/txtModeResult"
                android:layout_width="match_parent"
                android:layout_height="21dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:text=""
                android:fontFamily="@font/poppins_medium"
                style="@style/TEXTS"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/playagainbutton"
        android:layout_width="182dp"
        android:layout_height="59dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        style="@style/BUTTON"
        android:fontFamily="@font/poppins_bold"
        android:text="Play Again" />


</LinearLayout>